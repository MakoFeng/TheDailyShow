<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/theme_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/theme_accent</item>

        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>

        <item name="selectableItemBackground">@drawable/ab_selectable_background</item>

        <item name="android:selectableItemBackground">@drawable/ab_selectable_background</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"></style>

    <style name="toolbar.style" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>
